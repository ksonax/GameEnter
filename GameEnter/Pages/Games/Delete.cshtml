@page "/gamemodels/delete"
@model GameEnter.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>GameModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameModel.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameModel.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameModel.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameModel.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameModel.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameModel.Genre)
        </dd>
        <dt class="col-sm-2">
            @if (Model.GameModel.GamePicture != null)
            {
                <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.GameModel.GamePicture))">
            }
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="GameModel.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
