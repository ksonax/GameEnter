@page
@model GameEnter.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Game> gameList = new List<Game>();
}

<h1>Create</h1>

<h4>Lobby</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lobby.Name" class="control-label"></label>
                <input asp-for="Lobby.Name" class="form-control" />
                <span asp-validation-for="Lobby.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lobby.LobbyGame" class="control-label"></label>
                <select asp-for="Lobby.LobbyGame" class="form-control"
                        asp-items="@Model.GameNameSL">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="Lobby.LobbyGame" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
