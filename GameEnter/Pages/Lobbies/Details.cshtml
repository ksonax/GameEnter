@page
@model GameEnter.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Lobby</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>Lobby Name</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lobby.Name)
        </dd>
        <dt class="col-sm-2">
            <p>Game Title:</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lobby.LobbyGame.Title)
        </dd>
        <dt class="col-sm-2">
            <p>Owner Name:</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lobby.Owner.UserName)
        </dd>
        <dt class="col-sm-2">
            @if (Model.Lobby.LobbyGame.GamePicture != null)
            {
                <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Lobby.LobbyGame.GamePicture))">
            }
        </dt>
    </dl>
</div>
<div>
    @if (!User.IsInRole("BasicUser"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Lobby.Id">Edit</a>
    }
    | <a asp-page="./Index">Back to List</a> |
</div>
